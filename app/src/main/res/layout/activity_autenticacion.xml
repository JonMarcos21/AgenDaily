<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".activitys.Autenticacion"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="189dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="73dp"
        android:contentDescription="imagen logo"
        app:srcCompat="@drawable/logoapp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="233dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="377dp"
        android:layout_marginEnd="80dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:ems="10"
        android:hint="@string/contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="@color/azul_oscuro"
        android:textSize="20dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="60dp"
        android:drawableLeft="@drawable/icon_perfil"
        android:hint="@string/Usuario"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textColorHint="@color/azul_oscuro"
        android:textSize="20dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textViewWrongPassword"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="681dp"
        android:layout_marginEnd="79dp"
        android:text="Contraseña incorrecta"
        android:textColor="#C1170A"
        android:textSize="16sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextPasswordRepeated"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="80dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:hint="@string/contraseña2"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textColorHint="@color/azul_oscuro"
        android:textSize="20dp"
        android:visibility="invisible" />
    <EditText
        android:id="@+id/editTextPasswordChange"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="80dp"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:hint="@string/contraseña_nueva"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/azul_oscuro"
        android:textColorHint="@color/azul_oscuro"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="@color/azul_claro"
        android:onClick="singIn"
        android:text="@string/iniciar_sesion"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewNoMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="624dp"
        android:layout_marginEnd="81dp"
        android:text="Las constraseñas no coinciden"
        android:textColor="#C1170A"
        android:textSize="16sp"
        android:visibility="invisible">

    </TextView>

    <TextView
        android:id="@+id/textViewEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="657dp"
        android:layout_marginEnd="82dp"
        android:text="@string/campos"
        android:textColor="#C1170A"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Registrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="@color/azul_claro"
        android:text="@string/crear_cuenta"
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:textSize="30dp" />

    <Button
        android:id="@+id/buttonChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="501dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="@color/azul_claro"
        android:onClick="changePassword"
        android:text="@string/cambiar"
        android:textColor="@color/blanco"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="81dp"
        android:background="@drawable/button_rounder"
        android:backgroundTint="@color/azul_claro"
        android:text="@string/volver"
        android:textColor="#FFFF"
        android:visibility="invisible" />


</RelativeLayout>