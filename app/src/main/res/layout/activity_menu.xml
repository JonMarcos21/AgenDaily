<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".Menus">


    <Button
        android:id="@+id/btnDiario"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/azul_claro"
        android:layout_marginEnd="6dp"
        android:background="@drawable/button_rounder"
        android:drawableLeft="@drawable/diariologo"
        android:onClick="diario"
        android:text="@string/Diario"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnNotas"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:backgroundTint="@color/azul_claro"
        android:layout_below="@+id/btnDiario"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/button_rounder"
        android:drawableLeft="@drawable/publicalo"
        android:onClick="notas"
        android:text="@string/Notas"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnAvisos"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@+id/btnDiario"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/azul_claro"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/button_rounder"
        android:drawableLeft="@drawable/megafono"
        android:onClick="avisos"
        android:text="@string/avisos"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCalendario"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@+id/btnDiario"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/azul_claro"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/button_rounder"
        android:drawableLeft="@drawable/calendario"
        android:onClick="calendario"
        android:text="@string/calendario"
        android:textSize="20dp" />

   <!-- <com.airbnb.lottie.LottieAnimationView
